<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mode2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:text="选取文件"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/select" />

    <Button
        android:text="播放"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/play"
        android:layout_below="@+id/select"
        android:layout_toStartOf="@+id/select" />

    <Button
        android:text="停止"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stop"
        android:layout_alignBaseline="@+id/pause"
        android:layout_alignBottom="@+id/pause"
        android:layout_toEndOf="@+id/select" />

    <Button
        android:text="断开连接"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stopconnect"
        android:layout_alignBaseline="@+id/coneect"
        android:layout_alignBottom="@+id/coneect"
        android:layout_alignStart="@+id/stop" />

    <Button
        android:text="连接头带"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/coneect"
        android:layout_below="@+id/play"
        android:layout_alignStart="@+id/play" />

    <Button
        android:text="暂停"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pause"
        android:layout_alignBaseline="@+id/play"
        android:layout_alignBottom="@+id/play"
        android:layout_toEndOf="@+id/play" />

</RelativeLayout>

